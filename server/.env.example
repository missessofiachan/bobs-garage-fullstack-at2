# ============================================
# Bob's Garage API - Environment Variables
# ============================================

# === Server Configuration ===
NODE_ENV=development
PORT=4000

# === Database Configuration ===
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=bobs_garage
DATABASE_USER=root
DATABASE_PASSWORD=your_password_here

# Optional: Connection pooling
# DATABASE_POOL_MIN=0
# DATABASE_POOL_MAX=10

# === Authentication & Security ===
# JWT secret must be at least 32 characters for security
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters_long

# Optional: Separate secret for refresh tokens (recommended for production)
# JWT_REFRESH_SECRET=your_refresh_token_secret_here_minimum_32_characters

JWT_EXPIRES_IN=1h
REFRESH_EXPIRES_IN=7d

# Optional: Cookie security (automatically enforced in production)
# COOKIE_SECURE=true
# COOKIE_SAME_SITE=strict

# === CORS & URLs ===
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173

# Public base URL for generating links
BASE_URL=http://localhost:4000

# === Rate Limiting ===
# General API rate limits (60 seconds, 100 requests)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Stricter rate limits for auth endpoints (60 seconds, 5 requests)
RATE_LIMIT_AUTH_WINDOW_MS=60000
RATE_LIMIT_AUTH_MAX=5

# === File Uploads ===
# Root upload directory
UPLOAD_DIR=uploads

# Max file size in bytes (default: 2MB)
UPLOAD_MAX_SIZE=2097152

# === Logging ===
# Log level: error, warn, info, debug
# LOG_LEVEL=info

# Max log file size in bytes (default: 10MB)
# LOG_MAX_SIZE=10485760

# Number of rotated log files to keep (default: 5)
# LOG_MAX_FILES=5

# Log directory (default: logs)
# LOG_DIR=logs

# === Performance & Limits ===
# Request body parser limit (e.g., '10kb', '50mb')
BODY_PARSER_LIMIT=10kb

# Enable gzip compression (default: false)
# COMPRESSION_ENABLED=true

# === Graceful Shutdown & Cleanup ===
# Force shutdown timeout in milliseconds (default: 10000)
# SHUTDOWN_TIMEOUT_MS=10000

# Upload cleanup interval in milliseconds (default: 24 hours)
# CLEANUP_INTERVAL_MS=86400000
