# Bob's Garage Server Environment Variables - Template
# Copy this file to .env and customize for your environment

# Application Configuration
NODE_ENV=development
PORT=4000

# Database Configuration (Required - CHANGE THESE!)
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=bobs_garage
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_db_password

# Authentication & Security (Required - CHANGE THESE!)
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters_long
JWT_EXPIRES_IN=1h
REFRESH_EXPIRES_IN=7d

# CORS & URLs
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
BASE_URL=http://localhost:4000

# File Uploads
UPLOAD_DIR=uploads
UPLOAD_MAX_SIZE=2097152

# Logging
LOG_LEVEL=info
SLOW_QUERY_THRESHOLD_MS=1000
DETAILED_LOGGING_ENABLED=false
METRICS_ENABLED=true

# Performance & Limits
BODY_PARSER_LIMIT=10kb
COMPRESSION_ENABLED=true

# Caching Configuration
CACHE_ENABLED=true
CACHE_TYPE=memory
CACHE_TTL_SECONDS=300
REDIS_KEY_PREFIX=bobs_garage:
